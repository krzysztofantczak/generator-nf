{
    "framework": "jasmine",
    "serve_files": [ ".tmp/bundle_testem.js" ],
    "src_files": [
        "src/**/*.js",
        "spec/**/*.js"
    ],
    "before_tests": "node node_modules/browserify/bin/cmd test/spec/client/unit/*.js -o .tmp/bundle_testem.js",
    "after_tests": "rm .tmp/bundle_testem.js",
    "launch_in_dev": [ "chrome", "firefox", "phantomjs" ]
}
